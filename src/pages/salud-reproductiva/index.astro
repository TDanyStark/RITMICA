---
import { URL_BASE } from "@/config";
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Salud_RSVG from "@/assets/Salud_RSVG.astro";
---

<Layout>
  <section
    class="overflow-clip bg-position-[75%] md:bg-right"
    style={`
      background-image: url('${URL_BASE}/img/bg_salud_reproductiva.webp');
      background-size: cover;
    `}
  >
    <div class="flex w-9xl max-w-full mx-auto flex-col min-h-screen">
      <Header with="tuciclo" />
      <main class="flex-1 p-4 flex flex-col md:flex-row gap-10">
        <div class="md:border-r md:border-purple-abbott w-96 max-w-full">
          <h1
            class="text-purple-abbott font-bold text-center text-4xl md:text-6xl"
          >
            RIT<span class="text-pink-abbott">MICA</span>
          </h1>

          <img
            src={`${URL_BASE}/img/womans/salud_reproductiva_1.webp`}
            alt="Salud Reproductiva"
            class="w-full h-auto max-h-[300px] md:max-h-[600px] object-contain"
          />
        </div>
        <section>
          <div class="flex flex-col md:flex-row items-center gap-4">
            <Salud_RSVG class="w-16 md:w-20 h-auto" />
            <div class="text-center md:text-left text-purple-abbott">
              <h2 class="text-4xl md:text-6xl uppercase font-bold">
                Salud reproductiva
              </h2>
              <p class="text-2xl md:text-3xl">
                Criterios de elegibilidad para el uso de anticonceptivos
                hormonales
              </p>
            </div>
          </div>
          <div class="mt-24">
            <a href=""></a>
            <a href=""></a>
          </div>
        </section>
      </main>
      <Footer />
    </div>
  </section>
</Layout>
